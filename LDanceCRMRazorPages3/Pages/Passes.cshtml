@page
@model LDanceCRMRazorPages3.Pages.PassesModel
@{
}

<div class="main-heading">
    <h2>Мои абонементы</h2>
</div>


<div class="green-heading">
    <h4><i class="far fa-id-card"></i> Активные абонементы </h4>
</div>

<div style="margin-top: 10px;">
    <a class="btn btn-secondary btn-custom" href='\PassTypes'>
        <i class="fas fa-plus"></i> Купить абонемент
    </a>
</div>


@if (Model.activeSuccessMessage.Length > 0)
{
    <div class="row mb-3 mt-3">
        <div class="col-sm-9">
            <div class="alert alert-info  alert-dismissible fade show" role="alert">
                <strong>@Model.activeSuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
else
{
    <table class="table" style="width: 100%; table-layout: fixed;">
        <thead>
            <tr>
                <th style="width: 33.33%">Дата покупки</th>
                <th style="width: 33.33%">Название</th>
                <th style="width: 33.33%">Осталось посещений</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.activePassesInfoList)
            {
                <tr>
                    <td>@item.PassDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.PassTypeName</td>
                    <td>@item.NumberOfVisits</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="yellow-heading">
    <h4><i class="fas fa-id-card"></i> Неактивные абонементы </h4>
</div>

@if (Model.successMessage.Length > 0)
{
    <div class="row mb-3 mt-3">
        <div class="col-sm-9">
            <div class="alert alert-info  alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
else
{
    <table class="table" style="width: 100%; table-layout: fixed;">
        <thead>
            <tr>
                <th style="width: 33.33%">Дата покупки</th>
                <th style="width: 33.33%">Название</th>
                <th style="width: 33.33%">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.passesInfoList)
            {
                <tr>
                    <td>@item.PassDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.PassTypeName</td>
                    <td>
                        <a class="btn btn-primary btn-sm custom-bg-color" href="/PassProlong?PassID=@item.PassID">
                            <i class="fas fa-money-bill"></i> Продлить абонемент
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
    


