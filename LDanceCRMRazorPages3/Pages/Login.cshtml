@page
@model LDanceCRMRazorPages3.Pages.LoginModel
@{
}

<div class="container mt-5">

    <div class="row justify-content-center align-items-center">

        <div class="col-sm-12 col-md-12 col-lg-4">

            <h1 class="mb-3">Вход</h1>

            <form method="post">

                @*список всех ошибок ввода*@
                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Phone">Номер телефона:</label>
                    <input type="text" asp-for="Model.Phone" class="form-control" />
                    <span asp-validation-for="Model.Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Password">Пароль:</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Model.RememberMe">Запомнить вход</label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>

            </form>

        </div>
    </div>
</div>

