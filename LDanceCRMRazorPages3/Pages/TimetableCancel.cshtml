@page
@model LDanceCRMRazorPages3.Pages.TimetableCancelModel
@{
}

<form method="post">

    <div class="text-center mb-3">
        <h3>Вы уверены, что хотите отменить бронирование?</h3>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="mt-4">
                    @*блок с информацией о записи*@
                    <table class="table">
                        <tbody>
                            <tr>
                                <td style="width: 50%;"><strong>Дата:</strong></td>
                                <td style="width: 50%;">@Model.timetableInfo.TimetableDate.ToString("dd.MM.yyyy")</td>
                            </tr>
                            <tr>
                                <td><strong>Время начала:</strong></td>
                                <td>@Model.timetableInfo.StartTime.Hours.ToString("00"):@Model.timetableInfo.StartTime.Minutes.ToString("00")</td>
                            </tr>
                            <tr>
                                <td><strong>Время окончания:</strong></td>
                                <td>@Model.timetableInfo.EndTime.Hours.ToString("00"):@Model.timetableInfo.EndTime.Minutes.ToString("00")</td>
                            </tr>
                            <tr>
                                <td><strong>Зал:</strong></td>
                                <td>@Model.timetableInfo.HallName</td>
                            </tr>
                            <tr>
                                <td><strong>Тренировка:</strong></td>
                                <td>@Model.timetableInfo.TrainingName</td>
                            </tr>
                            <tr>
                                <td><strong>Тренер:</strong></td>
                                <td>@Model.timetableInfo.TrainerName</td>
                            </tr>
                            <tr>
                                <td><strong>Тип:</strong></td>
                                <td>@Model.timetableInfo.TrainingTypeName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Да, отменить мою запись</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Timetable?searchDate=@Model.SearchDate" role="button">Назад</a>
        </div>
    </div>
</form>


@if (!string.IsNullOrEmpty(Model.successMessage))
{
    TempData["CancelMessage"] = Model.successMessage;
}